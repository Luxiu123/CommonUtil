<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.modernwpf.com/2019">
  <!-- SuggestionBoxDataTemplate -->
  <DataTemplate x:Key="SuggestionBoxDataTemplate">
    <StackPanel Orientation="Horizontal" ToolTipService.InitialShowDelay="{StaticResource ToolTipServiceInitialShowDelay}"
                      Width="{Binding RelativeSource={RelativeSource AncestorType=ui:AutoSuggestBox},Path=ActualWidth,Converter={StaticResource SubtractConverter},ConverterParameter=10}">
      <StackPanel.ToolTip>
        <ToolTip Content="{Binding Text}"/>
      </StackPanel.ToolTip>
      <ItemsControl ItemsSource="{Binding TextList}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding Text}" Foreground="{Binding Color,Converter={StaticResource StringToBrushConverter}}"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal"/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
      </ItemsControl>
      <!-- 备注 -->
      <TextBlock TextAlignment="Right" Width="50" Text="{Binding Note}" />
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>