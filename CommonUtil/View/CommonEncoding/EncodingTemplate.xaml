<UserControl x:Class="CommonUtil.View.EncodingTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonUtil.View"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="50"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBox Style="{StaticResource MultilineTextBoxStyle}"
             Text="{Binding ElementName=Root,Path=InputText}"/>
    <ui:SimpleStackPanel Grid.Row="1"
                         Orientation="Horizontal"
                         Spacing="8">
      <ui:SimpleStackPanel.Resources>
        <Style TargetType="StackPanel">
          <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
      </ui:SimpleStackPanel.Resources>
      <Button Click="EncodingTextClick">
        <StackPanel>
          <TextBlock Style="{StaticResource ButtonIconFontStyle}" Text="&#xe63e;"/>
          <TextBlock Text="{Binding ElementName=Root,Path=EncodingButtonText}" Style="{StaticResource ButtonTextBlockStyle}"/>
        </StackPanel>
      </Button>
      <Button Click="DecodingTextClick">
        <StackPanel>
          <TextBlock Style="{StaticResource ButtonIconFontStyle}" Text="&#xe63e;"/>
          <TextBlock Text="{Binding ElementName=Root,Path=DecodingButtonText}" Style="{StaticResource ButtonTextBlockStyle}"/>
        </StackPanel>
      </Button>
      <Button Click="CopyResultClick">
        <StackPanel>
          <TextBlock Style="{StaticResource ButtonIconFontStyle}" Text="&#xe6ef;"/>
          <TextBlock Text="复制结果" Style="{StaticResource ButtonTextBlockStyle}"/>
        </StackPanel>
      </Button>
      <Button Click="ClearInputClick" Style="{StaticResource GlobalErrorButtonStyle}">
        <StackPanel>
          <TextBlock Style="{StaticResource ButtonIconFontStyle}" Text="&#xe946;"/>
          <TextBlock Text="清空输入" Style="{StaticResource ButtonTextBlockStyle}"/>
        </StackPanel>
      </Button>
    </ui:SimpleStackPanel>
    <TextBox Grid.Row="2"
             Style="{StaticResource MultilineTextBoxStyle}"
             IsReadOnly="True"
             Text="{Binding ElementName=Root,Path=OutputText}"/>
  </Grid>
</UserControl>
