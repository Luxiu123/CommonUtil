<UserControl x:Class="CommonUtil.View.EncodingTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonUtil.View"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:widget="clr-namespace:CommonUtil.Widget"
             mc:Ignorable="d" 
             x:Name="Root"
             Margin="8"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="50"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBox Style="{StaticResource MultilineTextBoxStyle}"
             Text="{Binding InputText,ElementName=Root}"/>
    <ui:SimpleStackPanel Grid.Row="1"
                         Orientation="Horizontal"
                         Spacing="8">
      <widget:IconButton Icon="&#xe63e;" 
                         Text="{Binding EncodingButtonText,ElementName=Root}" 
                         Click="EncodingTextClick"/>
      <widget:IconButton Icon="&#xe640;"
                         Text="{Binding DecodingButtonText,ElementName=Root}"
                         Click="DecodingTextClick"/>
      <widget:IconButton Icon="&#xe6ef;" Text="复制结果" Click="CopyResultClick"/>
      <widget:IconButton Icon="&#xe946;" 
                         Text="清空输入"
                         Style="{StaticResource GlobalErrorButtonStyle}"
                         Click="ClearInputClick"/>
    </ui:SimpleStackPanel>
    <TextBox Grid.Row="2"
             Style="{StaticResource MultilineTextBoxStyle}"
             IsReadOnly="True"
             Text="{Binding OutputText,ElementName=Root}"/>
  </Grid>
</UserControl>
