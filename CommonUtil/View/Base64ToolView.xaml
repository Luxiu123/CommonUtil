<Page
  x:Class="CommonUtil.View.Base64ToolView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUtil.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  xmlns:widget="clr-namespace:CommonUtil.Widget"
  Title="Base64Tool"
  Margin="8"
  d:DesignHeight="450"
  d:DesignWidth="800"
  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <!--  Control  -->
    <WrapPanel Orientation="Horizontal">
      <WrapPanel.Resources>
        <Style BasedOn="{StaticResource GlobalIconButtonStyle}" TargetType="widget:IconButton">
          <Setter Property="Margin" Value="0,0,8,8" />
        </Style>
      </WrapPanel.Resources>
      <widget:IconButton
        Click="EncodeString"
        Icon="&#xe63e;"
        Text="字符串编码" />
      <widget:IconButton
        Click="DecodeString"
        Icon="&#xe640;"
        Text="字符串解码" />
      <widget:IconButton
        Click="EncodeFile"
        Icon="&#xe63e;"
        Text="文件编码" />
      <widget:IconButton
        Click="DecodeFile"
        Icon="&#xe640;"
        Text="文件解码" />
      <widget:IconButton
        Click="CopyResultClick"
        Icon="&#xe6ef;"
        Text="复制结果" />
      <widget:IconButton
        Margin="0,0,8,8"
        Click="ClearInputClick"
        Icon="&#xe946;"
        Style="{StaticResource GlobalErrorButtonStyle}"
        Text="清空输入" />
    </WrapPanel>
    <!--  Description  -->
    <UniformGrid
      Grid.Row="1"
      Margin="0,8,0,8"
      Columns="2">
      <UniformGrid.Resources>
        <Style BasedOn="{StaticResource GlobalTextBlockStyle}" TargetType="TextBlock">
          <Setter Property="FontSize" Value="{DynamicResource HeaderFontSize}" />
        </Style>
      </UniformGrid.Resources>
      <TextBlock Text="输入：" />
      <TextBlock Margin="4,0,0,0" Text="结果：" />
    </UniformGrid>
    <!--  Input,Output  -->
    <UniformGrid Grid.Row="2" Columns="2">
      <TextBox
        Margin="0,0,4,0"
        Style="{StaticResource MultilineTextBoxStyle}"
        Text="{Binding InputText}" />
      <TextBox
        Margin="4,0,0,0"
        IsReadOnly="True"
        Style="{StaticResource MultilineTextBoxStyle}"
        Text="{Binding OutputText, Mode=OneWay}" />
    </UniformGrid>
  </Grid>
</Page>
