<Page x:Class="CommonUtil.View.OrdinalTextGeneratorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonUtil.View" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:widget="clr-namespace:CommonUtil.Widget"
      mc:Ignorable="d" 
      DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdinalTextGeneratorView">

  <UniformGrid Columns="2" Margin="8">
    <UniformGrid Rows="2" Margin="0,0,8,0">
      <TextBox Style="{StaticResource MultilineTextBoxStyle}"
               FontFamily="Arial"
               Text="{Binding InputText}"/>
      <!-- Control -->
      <ui:SimpleStackPanel Spacing="8" 
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center">
        <ui:SimpleStackPanel.Resources>
          <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
          </Style>
        </ui:SimpleStackPanel.Resources>
        <StackPanel>
          <TextBlock Text="起始位置："/>
          <ui:NumberBox Minimum="1" 
                        Maximum="10000"
                        Width="120"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1"
                        AcceptsExpression="False"
                        Value="{Binding StartIndex}"
                        LostFocus="NumberBoxLostFocus"/>
        </StackPanel>
        <StackPanel>
          <TextBlock Text="生成数量："/>
          <ui:NumberBox Minimum="1" 
                        Maximum="10000"
                        Width="120"
                        SpinButtonPlacementMode="Compact"
                        SmallChange="1"
                        AcceptsExpression="False"
                        Value="{Binding GenerationCount}"
                        LostFocus="NumberBoxLostFocus"/>
        </StackPanel>
        <StackPanel>
          <TextBlock Text="文本顺序："/>
          <ComboBox SelectedIndex="{Binding GenerationOrder}" Width="120">
            <ComboBoxItem Content="正序"/>
            <ComboBoxItem Content="逆序"/>
          </ComboBox>
        </StackPanel>
        <ui:SimpleStackPanel Orientation="Horizontal" Spacing="8">
          <widget:IconButton Icon="&#xe601;" Text="生    成" Click="GenerateClick"/>
          <widget:IconButton Icon="&#xe6ef;" Text="复制结果" Click="CopyResultClick"/>
          <widget:IconButton Icon="&#xe946;" 
                         Text="清空输入"
                         Style="{StaticResource GlobalErrorButtonStyle}"
                         Click="ClearInputClick"/>
        </ui:SimpleStackPanel>
      </ui:SimpleStackPanel>
    </UniformGrid>
    <!-- 输出 -->
    <TextBox Style="{StaticResource MultilineTextBoxStyle}"
             IsReadOnly="True"
             Text="{Binding OutputText}"/>
  </UniformGrid>
</Page>
