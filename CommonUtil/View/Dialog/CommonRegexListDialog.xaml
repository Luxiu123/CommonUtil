<ui:ContentDialog  xmlns:ui="http://schemas.modernwpf.com/2019"
                   x:Class="CommonUtil.View.CommonRegexListDialog"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                   xmlns:local="clr-namespace:CommonUtil.View"
                   mc:Ignorable="d" 
                   DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
                   d:DesignHeight="450" d:DesignWidth="800"
                   Title="常用正则表达式"
                   PrimaryButtonText="关闭">
  <ui:ContentDialog.TitleTemplate>
    <DataTemplate>
      <TextBlock Text="{Binding}" FontWeight="Bold"/>
    </DataTemplate>
  </ui:ContentDialog.TitleTemplate>
  <ScrollViewer>
    <ItemsControl ItemsSource="{Binding RegexList}" 
           Height="600"
           Width="350">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <DockPanel>
            <TextBlock Text="{Binding Key}" Width="150"/>
            <TextBox IsReadOnly="True"
                   Style="{StaticResource BorderlessTextBoxStyle}"
                   Text="{Binding Value,Mode=OneTime}"/>
          </DockPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>
</ui:ContentDialog>
