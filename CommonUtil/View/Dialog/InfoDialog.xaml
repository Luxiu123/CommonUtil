<local:BaseDialog x:Class="CommonUtil.View.Dialog.InfoDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:CommonUtil.View.Dialog"
                  mc:Ignorable="d" 
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
                  d:DesignHeight="450" d:DesignWidth="800"
                  DefaultButton="Close">
  <local:BaseDialog.TitleTemplate>
    <DataTemplate>
      <ui:SimpleStackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Style="{StaticResource InfoIconStyle}" />
        <TextBlock Style="{StaticResource ContentDialogTitleStyle}"
                   Text="{Binding RelativeSource={RelativeSource AncestorType=ui:ContentDialog},Path=Title}" />
      </ui:SimpleStackPanel>
    </DataTemplate>
  </local:BaseDialog.TitleTemplate>

  <TextBlock x:Name="DetailTextBlock" Text="{Binding DetailText}" />

</local:BaseDialog>
