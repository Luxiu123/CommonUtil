<local:BaseDialog x:Class="CommonUtil.View.Dialog.SimpleInputDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:CommonUtil.View.Dialog"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
                  mc:Ignorable="d" 
                  d:DesignHeight="450" d:DesignWidth="800">
  <DockPanel Height="35" MaxWidth="350">
    <!-- 字符串为空则隐藏 -->
    <TextBlock MaxWidth="100"
               TextAlignment="Left"
               Text="{Binding Header}"
               TextWrapping="Wrap"
               Margin="0,0,8,0"
               Visibility="{Binding RelativeSource={RelativeSource Mode=Self},Path=Text,Converter={StaticResource VisibilityEqualConverter},ConverterParameter='|Collapsed'}" />
    <TextBox Name="TargetTextBlock"
             DockPanel.Dock="Right"
             MinWidth="200" />
  </DockPanel>
</local:BaseDialog>
