<Button x:Class="CommonUtil.Widget.IconButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CommonUtil.Widget"
        mc:Ignorable="d" 
        Name="Root"
        Style="{StaticResource GlobalButtonStyle}"
        d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Orientation="Horizontal">
    <TextBlock Text="{Binding Icon,ElementName=Root}"
               Style="{StaticResource ButtonIconFontStyle}"
               Visibility="{Binding Icon,ElementName=Root,Converter={StaticResource HideIfEmptyConverter}}"/>
    <TextBlock Text="{Binding Text,ElementName=Root}" Style="{StaticResource ButtonTextBlockStyle}"/>
  </StackPanel>
</Button>
